%h1 <%= plural_table_name %>

%table
  %tr
<% for attribute in attributes -%>
    %th <%= attribute.human_name %>
<% end -%>
    %th= Actions

  - @<%= plural_table_name %>.each do |<%= singular_table_name %>|
    %tr
<% for attribute in attributes -%>
      %td= <%= singular_table_name %>.<%= attribute.name %>
<% end -%>
      %td
        = link_to 'Show', resource_path
        = link_to 'Edit', edit_resource_path(<%= singular_table_name %>)
        = link_to 'Destroy', resource_path, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New <%= human_name %>', new_resource_path
